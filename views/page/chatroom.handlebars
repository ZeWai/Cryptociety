<link rel="stylesheet" href="../css/{{function}}.css">
<div>
    <div class="sectionleft">
        <div class="image">
            <img src="{{icon}}" id="icon_img">
        </div>
        <h4 class="username">{{username}}</h4>
        <p class="solgan">{{solgan}}</p>
        <form action="/index"><button id="post">Post</button></form>
        <form action="/index/group"><button id="group">Group</button></form>
        <form action="/index/follower"><button id="follower">Follower</button></form>
        <form action="/index/chatroom"><button id="chatroom">Chatroom</button></form>
        <form action="/setting"><button>Setting</button></form>
    </div>
    <div class="sectionright">
        <div id="Chatroom" class="tabcontent">
                            <form action="/index/chatroom">
                                <div class="form-control">
                                    <label for="room">Room</label>
                                    <select name="room" id="room">
                                        <option selected="selected" selected disabled hidden> Please select room here</option>
                                        <option value="Bitcoin">Bitcoin</option>
                                        <option value="Ethereum">Ethereum</option>
                                        <option value="BinanceCoin">Binance Coin</option>
                                        <option value="Tether">Tether</option>
                                        <option value="Solana">Solana</option>
                                        <option value="Other">Other</option>
                                    </select>
                                <button type="submit" class="btn">Join Chat</button>
                                </div>
                            </form>
            <div class="chat-container">
                <header class="chat-header">
                    <h1><i class="roomname"></i> Chatroom</h1>
                    <a id="leave-btn" class="btn">Leave Room</a>
                </header>
                <main class="chat-main">
                    <div class="chat-sidebar">
                        <h3><i class="fas fa-comments"></i> Room Name:</h3>
                        <h2 id="room-name"></h2>
                        <h3><i class="fas fa-users"></i> Users</h3>
                        <ul id="users"></ul>
                    </div>
                    <div class="chat-messages"></div>
                </main>
                <div class="chat-form-container">
                    <form id="chat-form">
                        <input id="msg" type="text" placeholder="Enter Message" required autocomplete="off" />
                        <button class="btn"><i class="fas fa-paper-plane"></i> Send</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.0.js"></script>
<script src="https://cdn.socket.io/4.4.0/socket.io.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
<script src="../js/chatroom.js"></script>