<link rel="stylesheet" href="../css/chatroom.css">
<div>
    <div class="sectionleft">
        <div class="image">
            <img src="{{icon}}" id="icon_img">
        </div>
        <h4 class="username">{{username}}</h4>
        <p class="slogan">{{slogan}}</p>
        <button class="tablinks" onclick="SelectFunction(event, 'content_list')" id="defaultOpen">Post</button>
        <button class="tablinks" onclick="SelectFunction(event, 'Group')">Group</button>
        <button class="tablinks" onclick="SelectFunction(event, 'Follower')">Follower</button>
        <button class="tablinks" onclick="SelectFunction(event, 'Chatroom')" id="chatroom">Chatroom</button>
        <a href="setting" style="text-decoration:none"><button>Setting</button></a>
    </div>
    <div class="sectionright">
        <div id="content_list" class="tabcontent text-center">
            <div class="row">
                <h3>Content</h3>
                <ul id="content_ul">
                    <li>
                        <div id="content_owner_info">
                            <img src="../../../image/uploaded/userIcon_1.png" alt="content_owner_icon">
                            <p id="content_owner">Miofong</p>
                        </div>
                        <div id="content_owner_info">
                            <p id="content_post_date">Miofong</p>
                            <p id="content_post_text">
                                dsfdsojfoidsjofjdspojfopidsijfopdsjopfijdsopfjopdsjfopsdjpfojdspofjipo
                            </p>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <div id="Group" class="tabcontent">
            <h3>Group</h3>
            <p>Group List</p>
        </div>
        <div id="Follower" class="tabcontent">
            <h3>Follower</h3>
            <p>Follower List</p>
        </div>
        <div id="Chatroom" class="tabcontent">
            <ul class="pages">
                <li class="chat page">
                    <div class="chatArea">
                        <ul class="messages"></ul>
                    </div>
                    <input class="inputMessage" placeholder="Type here..." />
                </li>
            </ul>
        </div>

    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.0.js"></script>
<script src="https://cdn.socket.io/4.4.0/socket.io.js"></script>
