<link rel="stylesheet" href="../css/chatroom.css">
<div>
    <div class="sectionleft">
        <div class="image">
            <img src="{{icon}}" id="icon_img">
        </div>
        <h4 class="username">{{username}}</h4>
        <p class="slogan">{{slogan}}</p>
        <button class="tablinks" id="create_post">Post</button>
        <button class="tablinks" onclick="SelectFunction(event, 'Group')">Group</button>
        <button class="tablinks" onclick="SelectFunction(event, 'Follower')">Follower</button>
        <button class="tablinks" onclick="SelectFunction(event, 'Chatroom')" id="chatroom">Chatroom</button>
        <a href="setting" style="text-decoration:none"><button>Setting</button></a>
    </div>
    <div class="sectionright">
        <section class="title" id="content_list" hidden>
            <div class="row text-center">
                <h3>Content</h3>
                <ul id="content_ul"></ul>
            </div>
        </section>
        <div id="create_post_btn" class="tabcontent"></div>
        <section class="title" id="create_post_section" hidden>
            <div class="row text-center">
                <h3>Create Post</h3>
                <div id="content_wrapper">
                    <input class="form-control" type="text" placeholder="Entry something..." id="article">
                </div>
                <div>
                    <a class="btn submit col-12" id="article_submit_btn">Submit<i class="fas fa-paper-plane"></i></a>
                    <a class="btn cancel" id="article_cancel_btn">Cancel<i class="fas fa-trash-alt"></i></a>
                </div>
            </div>
        </section>
        <div id="Group" class="tabcontent">
            <h3>Group</h3>
            <p>Group List</p>
        </div>
        <div id="Follower" class="tabcontent">
            <h3>Follower</h3>
            <p>Follower List</p>
        </div>
        <div id="Chatroom" class="tabcontent">
            <ul class="pages">
                <li class="chat page">
                    <div class="chatArea">
                        <ul class="messages"></ul>
                    </div>
                    <input class="inputMessage" placeholder="Type here..." />
                </li>
            </ul>
        </div>

    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.0.js"></script>
<script src="https://cdn.socket.io/4.4.0/socket.io.js"></script>
<script src="../js/index.js"></script>
<script src="../js/chatroom.js"></script>