<link rel="stylesheet" href="../css/chatroom.css">
<div>
    <div class="sectionleft">
        <div class="image">
            <img src="{{icon}}" id="icon_img">
        </div>
        <h4 class="username">{{username}}</h4>
        <p class="slogan">{{slogan}}</p>
        <button class="tablinks" onclick="SelectFunction(event, 'welcome')" id="defaultOpen">Post</button>
        <button class="tablinks" onclick="SelectFunction(event, 'Group')">Group</button>
        <button class="tablinks" onclick="SelectFunction(event, 'Follower')">Follower</button>
        <button class="tablinks" onclick="SelectFunction(event, 'Chatroom')">Chatroom</button>
        <a href="setting" style="text-decoration:none"><button>Setting</button></a>
    </div>
    <div class="sectionright">
        <div id="welcome" class="tabcontent">
            <h3>Welcome</h3>
            <p>Welcome page</p>
        </div>
        <div id="Group" class="tabcontent">
            <h3>Group</h3>
            <p>Group List</p>
        </div>
        <div id="Follower" class="tabcontent">
            <h3>Follower</h3>
            <p>Follower List</p>
        </div>
        <div id="Chatroom" class="tabcontent">
            <ul class="pages">
                <li class="chat page">
                    <div class="chatArea">
                        <ul class="messages"></ul>
                    </div>
                    <input class="inputMessage" placeholder="Type here..." />
                </li>

            </ul>
        </div>

    </div>
</div>
<script src="../js/index.js"></script>
<script src="https://code.jquery.com/jquery-3.5.0.js"></script>
<script src="https://cdn.socket.io/4.4.0/socket.io.js"></script>
<script src="../js/chatroom.js"></script>