<body>
    <header id="navBar">
        <div class="container-fluid">
            <div class="row">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <div class="col-1" id="logo">
                        <a class="navbar-brand" href="#" id="logo_btn"><img src="../image/btn/logo_btn.png"
                                alt="logo_btn"></a>
                    </div>
                    <div class="col-5" id="search" hidden>
                        <form class="d-flex">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search"
                                id="search_bar">
                        </form>
                    </div>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#page"
                        aria-controls="page" aria-expanded="false" aria-label="Toggle navigation" id="burger">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse col-6" id="page">
                        <ul class="navbar-nav mb-2 mb-lg-0">
                            <li class="nav-item text-center">
                                <a class="nav-link" href="#" id="market_btn"><img src="../image/btn/crypto_logo.png"
                                        alt="crypto_btn"><span>Crypto</span></a>
                            </li>
                            <li class="nav-item text-center">
                                <a class="nav-link" href="#" id="index_btn"><img src="../image/btn/index_btn.png"
                                        alt="index_btn"><span>Index</span></a>
                            </li>
                            <li class="nav-item text-center">
                                <a class="nav-link" href="#" id="setting_btn"><img src="../image/btn/setting_btn.png"
                                        alt="setting_btn"><span>Setting</span></a>
                            </li>
                            <li class="nav-item text-center">
                                <a class="nav-link" href="#" id="logout_btn"><img src="../image/btn/logout_btn.png"
                                        alt="logout_btn"><span>Logout</span></a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </header>
    {{{body}}}
    <section>
        <div class="container-fluid">
            <div class="row text-center">
                <footer class="col-12" id="footer">
